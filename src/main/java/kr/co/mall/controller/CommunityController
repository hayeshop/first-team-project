package kr.co.mall.controller;

import java.io.IOException;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpSession;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Qualifier;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;

import kr.co.mall.service.CommunityService;
import kr.co.mall.vo.CommunityVo;

@Controller

public class CommunityController {
	
	@Autowired
	@Qualifier("cs")
	private CommunityService service;
	
	@RequestMapping("/community/cmain")
	public String cmain()
	{
		return "/community/cmain";
	}
	
	@RequestMapping("/community/write")
	public String write()
	{
		return "/community/write";
	}
	
	@RequestMapping("/community/write_ok")
	 public String write_ok(HttpSession session, HttpServletRequest request, CommunityVo cvo) throws IOException
	 {
		return service.write_ok(session, request, cvo);
	 }
	
	@RequestMapping("/community/list")
	public String list(Model model,CommunityVo cvo)
	{
		return service.list(model,cvo);
	}
	
	@RequestMapping("/community/content")
	public String content(Model model,HttpServletRequest request)
	{
		return service.content(model,request);
	}
	
	@RequestMapping("/community/delete")
	public String delete(CommunityVo cvo, HttpSession session)
	{
		return service.delete(cvo, session);
	}
	
}
