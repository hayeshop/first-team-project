        <h3> 회원 정보 수정 </h3>
  
        <div>
           <input type="text" name="post" placeholder="우편번호" id="post" value="${mvo.post}"><input type="button" value="주소검색" onclick="juso_search()" id="postbtn">
        </div>
        <div> <input type="text" name="juso" placeholder="주소" value="${mvo.juso}"> </div>
