<mapper namespace="kr.co.mall.mapper.CommunityMapper">
	<insert id="write_ok" parameterType="kr.co.mall.vo.CommunityVo">
		insert into community(id,userid,title,name,content,writeday,space,cimg,cimg2)
		values(#{id},#{userid},#{title},#{name},#{content},now(),#{space},#{cimg},#{cimg2})
	</insert>
	
	<select id="list" resultType="kr.co.mall.vo.CommunityVo">
		select * from community
	</select>
	
	<select id="content" resultType="kr.co.mall.vo.CommunityVo">
		select * from community where id=#{param}
		
	</select>
	
	<delete id="delete">
		delete from community where id=#{param}
	</delete>
	
	<select id="update" resultType="kr.co.mall.vo.CommunityVo" parameterType="kr.co.mall.vo.CommunityVo">
		select * from community where id=#{id}
	</select>
	
	<update id="update_ok" parameterType="kr.co.mall.vo.CommunityVo">
		update community set title=#{title},name=#{name},content=#{content},where id=#{id}
	</update>
</mapper> 
