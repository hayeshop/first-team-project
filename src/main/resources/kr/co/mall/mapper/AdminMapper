	<insert id="write_ok" parameterType="kr.co.mall.vo.AdminVo">
		String sql="insert into write(title,content,chk,writeday) values(?,?,?,now())"
	</insert>

	<select id="list" resultType="kr.co.mall.vo.AdminVo">
		String sql="insert into write_ok(title,content,chk,writeday) values(?,?,?,now())";
	</select>
		
	<select id="content" resultType="kr.co.mall.vo.AdminVo">
		select * from list where id=?
	</select>
	
	<select id="delete" resultType="kr.co.mall.vo.AdminVo">
		select * from list where id=?
	</select>
	
	<select id="update" resultType="kr.co.mall.vo.AdminVo">
		select * from content where id=?
	</select>
	
	<update id="update_ok" parameterType="kr.co.mall.vo.AdminVo">
		update content set title=?,content=?,chk=? where id=?
	</update>
