<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.mall.mapper.AdminMapper">
	
	<insert id="write_ok" parameterType="kr.co.mall.vo.AdminVo">
		insert into gongji(title,name,content,chk,writeday)
		values(#{title},#{name},#{content},chk(),now())
	</insert>

	<select id="list" resultType="kr.co.mall.vo.AdminVo">
		select * from gongji where id=#{param}
	</select>
		
	<select id="content" resultType="kr.co.mall.vo.AdminVo">
		select * from gongji where id=#{param}
	</select>
	
	<delete id="delete">
		delete from gongji where id=#{param}
	</delete>
	
	<select id="update" resultType="kr.co.mall.vo.AdminVo" parameterType="kr.co.mall.vo.AdminVo">
		select * from gongji where id=#{id}
	</select>
	
	<update id="update_ok" parameterType="kr.co.mall.vo.AdminVo">
		update gongji set title=#{title},name=#{name},content=#{content},where id=#{id}
	</update>
</mapper>
